	<script>
	window.onload = function() {
    //This code will run after your page loads
var pos=0;
var box=document.getElementById('box');
var t=setInterval(move, 10);
function move()
{
    if(pos>=550)
    {
        clearInterval(t);
        }
        else
        {
            pos +=1;
            box.style.left=pos+'px';
            }
    }
};
	</script>
